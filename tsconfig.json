{
  "compilerOptions": {

    "target": "es2017",                                 
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                                 
    "types": ["jest", "node"],
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
